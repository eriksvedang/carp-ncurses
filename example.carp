(load "ncurses.carp")
(use NCurses)

(defn main []
  (do (initscr)
      (start-color)
      (init-pair 1 COLOR_BLACK COLOR_RED)
      (init-pair 2 COLOR_BLUE COLOR_BLACK)
      (init-pair 3 COLOR_GREEN COLOR_WHITE)
      (attron (color-pair 1))
      (let-do [w (width)
               h (height)
               s (str* "Hello! " w ", " h)]
        (move (/ h 2) (- (/ w 2)
                         (/ (count &s) 2)))
        (printw s))
      (refresh)
      (getch)
      (endwin)))
